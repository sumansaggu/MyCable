<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/dailog_fees">

    <TextView
        android:id="@+id/title_dialog"
        android:layout_width="116dp"
        android:layout_height="37dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.00"
        android:text="Enter the fees"
        android:textAlignment="center"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/balance_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/title_dialog"
        android:layout_marginEnd="23dp"
        android:text="8888" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/title_dialog"
        android:layout_marginEnd="65dp"
        android:text="Balance:" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/reciept_dialog"
        android:layout_toStartOf="@+id/fees_dialog"
        android:text="Reciept:" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_dialog"
        android:layout_toEndOf="@+id/date_diaglog"
        android:text="Fees:" />

    <TextView
        android:id="@+id/fees_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/date"
        android:layout_below="@+id/title_dialog"
        android:text="8888" />

    <EditText
        android:id="@+id/reciept_dialog"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="67dp"
        android:ems="10"
        android:hint="Rupees"
        android:inputType="numberSigned|numberDecimal"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/date_diaglog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/date"
        android:text="Date:" />

    <TextView
        android:id="@+id/date"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/reciept_dialog"
        android:layout_marginTop="145dp"
        android:ems="10"
        android:inputType="date"
        android:textSize="15sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/remarksEditText"
        android:hint="Remark if any"
        android:layout_below="@+id/date_diaglog"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <Button
        android:text="OK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonYes"

        android:layout_marginTop="71dp"
        android:layout_below="@+id/date_diaglog"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_below="@+id/buttonYes"
        android:layout_centerVertical="true"
        android:text="Cancel" />

    <CheckBox
        android:id="@+id/sendSMScheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/date_diaglog"
        android:layout_marginEnd="15dp"
        android:checked="true"
        android:text="Send SMS" />

    <CheckBox
        android:id="@+id/printcheckBox"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/sendSMScheckBox"
        android:layout_below="@+id/textView7"
        android:text="Print" />

</RelativeLayout>