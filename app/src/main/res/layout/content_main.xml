<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.saggu.myapplication.CustAddEditActivity"
    tools:layout_height="wrap_content"
    tools:showIn="@layout/cust_add_edit_activity">


    <RelativeLayout
        android:id="@+id/layoutedittext"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <EditText
            android:id="@+id/person_name"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="6dp"

            android:textSize="14sp"
            android:layout_alignRight="@+id/etxtnickname"
            android:layout_alignEnd="@+id/etxtnickname"
            android:layout_alignLeft="@+id/etxtnickname"
            android:layout_alignStart="@+id/etxtnickname" />

        <EditText
            android:id="@+id/contact_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/person_name"
            android:minWidth="300dp"
            android:layout_alignStart="@+id/person_name"
            android:layout_below="@+id/person_name"

            android:inputType="numberDecimal"
            android:textSize="14sp"
            android:layout_alignRight="@+id/etxtnickname"
            android:layout_alignEnd="@+id/etxtnickname" />

        <EditText

            android:id="@+id/cust_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="60dp"

            android:inputType="number|numberDecimal"
            android:textSize="14sp"
            android:layout_below="@+id/etxtnickname"
            android:layout_alignLeft="@+id/date_txtview"
            android:layout_alignStart="@+id/date_txtview"
            android:layout_marginLeft="49dp"
            android:layout_marginStart="49dp" />

        <EditText

            android:id="@+id/fees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="60dp"
            android:inputType="number"
            android:textSize="14sp"
            android:layout_alignBaseline="@+id/cust_no"
            android:layout_alignBottom="@+id/cust_no"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="112dp"
            android:layout_marginEnd="112dp" />

        <EditText

            android:id="@+id/balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="60dp"
            android:inputType="number"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/cust_no"
            android:layout_alignLeft="@+id/cust_no"
            android:layout_alignStart="@+id/cust_no" />

        <TextView
            android:id="@+id/datetxtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date:"
            android:textSize="14sp"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/balance"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/date_txtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="yy-mm-dd"
            android:textSize="14sp"
            android:layout_alignBaseline="@+id/datetxtview"
            android:layout_alignBottom="@+id/datetxtview"
            android:layout_toRightOf="@+id/textView26"
            android:layout_toEndOf="@+id/textView26" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area"
            android:textSize="14sp"
            android:layout_alignBaseline="@+id/date_txtview"
            android:layout_alignBottom="@+id/date_txtview"
            android:layout_toRightOf="@+id/balance"
            android:layout_toEndOf="@+id/balance" />

        <Spinner
            android:id="@+id/spinner_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:layout_alignTop="@+id/textView16"
            android:layout_toRightOf="@+id/textView16"
            android:layout_toEndOf="@+id/textView16" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nName"
            android:layout_alignBaseline="@+id/etxtnickname"
            android:layout_alignBottom="@+id/etxtnickname"
            android:layout_alignLeft="@+id/datetxtview"
            android:layout_alignStart="@+id/datetxtview" />

        <EditText
            android:id="@+id/etxtnickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="14sp"
            android:layout_below="@+id/contact_no"
            android:layout_alignLeft="@+id/cust_no"
            android:layout_alignStart="@+id/cust_no"
            android:layout_alignRight="@+id/fees"
            android:layout_alignEnd="@+id/fees" />

    </RelativeLayout>

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/add"
        android:textAllCaps="false"
        android:layout_below="@+id/textView32"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp" />

    <RelativeLayout
        android:id="@+id/layoutButtons1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:padding="5dip"
        android:layout_marginBottom="82dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


    </RelativeLayout>

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_marginTop="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView29"
        android:layout_alignStart="@+id/textView29" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="19dp"
        android:text="Mobile"
        android:layout_below="@+id/textView28"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cust.No."
        android:layout_alignBaseline="@+id/textView31"
        android:layout_alignBottom="@+id/textView31"
        android:layout_alignLeft="@+id/textView29"
        android:layout_alignStart="@+id/textView29" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fees"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/textView29"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balance"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView31"
        android:layout_alignLeft="@+id/textView30"
        android:layout_alignStart="@+id/textView30" />


</RelativeLayout>
